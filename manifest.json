{
    "manifest_version": 3,
    "name" : "Rewind Youtube Shorts",
    "description": "Let's you watch Youtube Shorts as normal videos",
    "version" : "1.0.0",
    "icons": {
        "16": "images/rewind_youtube_shorts24.png",
        "48": "images/rewind_youtube_shorts48.png",
        "128": "images/rewind_youtube_shorts128.png"
    },
    "content_scripts": [
      {
        "run_at": "document_idle",
        "matches": [
          "https://www.youtube.com/shorts/*"
        ],
        "js": [ "shorts.js" ]
      }
    ]
}